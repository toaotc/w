{% extends 'ToaTwitterBootstrapBundle::layout.html.twig' %}

{% block stylesheets %}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {% stylesheets
        'components/bootstrap/less/bootstrap.less'
        'bundles/toawelcome/less/main.less'
        'components/bootstrap/less/responsive.less'
        filter='cssrewrite,?yui_css'
        output='css/compiled/toawelcome.css'
    %}
    <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
    {% endstylesheets %}

{% endblock %}

{% block javascripts %}
    {% javascripts
        'components/jquery/jquery.js'
        'components/bootstrap/js/bootstrap-tooltip.js'
        'components/bootstrap/js/*.js'
        filter='cssrewrite,?yui_js'
        output='js/compiled/toawelcome.js'
    %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}
