{% extends 'ToaLayoutBundle:bootstrap3:layout.html.twig' %}

{% block body %}
{% spaceless %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-sm-offset-2">
                {% block content '' %}
            </div>
        </div>
    </div>
{% endspaceless %}
{% endblock %}

{% block stylesheets %}
{% spaceless %}
    {{ parent() }}

    {% stylesheets
        'bundles/toawelcome/scss/main.scss'
        filter='cssrewrite'
        output='css/compiled/toawelcome.css'
    %}
        <link href="{{ asset_url }}" rel="stylesheet" type="text/css">
    {% endstylesheets %}
{% endspaceless %}
{% endblock %}

{% block javascripts %}
{% spaceless %}
    {{ parent() }}

    {% javascripts
        'bundles/toawelcome/components/parallax/source/parallax.js'
        'bundles/toawelcome/components/parallax/source/requestAnimationFrame.js'
        'bundles/toawelcome/components/parallax/source/jquery.parallax.js'
        'bundles/toawelcome/js/parallax.js'
        output='js/compiled/toawelcome.js'
    %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endspaceless %}
{% endblock %}
