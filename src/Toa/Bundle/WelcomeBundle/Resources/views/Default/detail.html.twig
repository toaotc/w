{% extends 'ToaWelcomeBundle::layout.html.twig' %}

{% block body %}
    <div class="row users">
        <div class="small-8 small-centered columns">
            <ul class="small-block-grid-1">
                {% for p in ['Jana', 'Jakob', 'Anton', 'Enrico'] if p|lower == name %}
                    <li class="user">
                        <a href="{{ path('toa_welcome_security_logout') }}" class="th round small-10">
                            <img class="small-12 {{ p|lower }}" src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7" />
                        </a>

                        <div>
                            <span class="label round inverse username">{{ p }}</span>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}